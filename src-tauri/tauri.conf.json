{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Gemini",
  "version": "1.0.1",
  "identifier": "com.google.gemini.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Gemini",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "url": "https://gemini.google.com"
      },
      {
        "label": "settings",
        "title": "Settings",
        "width": 400,
        "height": 300,
        "resizable": false,
        "fullscreen": false,
        "url": "settings.html",
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": null,
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "copyright": "Â© 2026 Google LLC",
    "shortDescription": "Official Gemini Desktop Experience",
    "longDescription": "A native macOS application for Google Gemini.",
    "publisher": "Google LLC",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
